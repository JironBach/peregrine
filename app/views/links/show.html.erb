<div id="main-container" class="container">
  <div class="row">

    <div class="col-md-9 article-wrapper">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-2">
              <%= image_tag @link.sm_img_url, alt: @link.name %> <br \>
            </div>
            <div class="col-md-10">
              <h1><%= @link.name %></h1>
              Affiliate link: <%= text_field_tag "Affiliate link", @link.amzn_aff_url %>
              Small image: <%= @link.sm_img_url %> <br \>
              Medium image: <%= @link.med_img_url %> <br \>
              Large image: <%= @link.lg_img_url %> <br \>
              Sales rank: <%= @link.sales_rank %> <br \>
              Reviews url: <%= @link.reviews_url %>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="col-md-3">
      <div class="row">
        <div class="col-md-12 generate-box">
          <strong>Generate Another Link</strong>
          <%= render 'form' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 feature-box">
          <div class="feature-msg">
            <h4>Peregrin helps you quickly generate Amazon affiliate links.</h4>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 feature-box">
          <div class="feature-msg">
            <h4>How does it work?</h4>
            <div class="row">
              <div class="col-md-4">
                <h3><i class="glyphicon glyphicon-link"></i></h3>
                Paste an Amazon product URL
              </div>
              <div class="col-md-4">
                <h3><i class="glyphicon glyphicon-briefcase"></i></h3>
                Enter your Amazon affiliate tag
              </div>
              <div class="col-md-4">
                <h3><i class="glyphicon glyphicon-flash"></i></h3>
                Click "Generate"
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
