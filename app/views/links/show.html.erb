<div id="main-container" class="container">
  <div class="row">

    <div class="col-md-9 article-wrapper">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <div class="col-md-2 article-left-sidebar">
              <%= image_tag @link.sm_img_url, alt: @link.name %> <br \>
              <div class="sales-rank">
                <i class="glyphicon glyphicon-fire"></i> <span class="sales-rank-number"><%= @link.sales_rank %></span>
              </div>
            </div>
            <div class="col-md-10">
              <h1><%= @link.name %></h1>

              <div class="grouped-fields">
                Affiliate link:
                <%= text_field_tag "Affiliate link", @link.amzn_aff_url %>
              </div>
              <div class="grouped-fields">
                Small image:
                <%= text_field_tag "Small image", @link.sm_img_url %>
              </div>
              <div class="grouped-fields">
                Medium image:
                <%= text_field_tag "Medium image", @link.med_img_url %>
              </div>
              <div class="grouped-fields">
                Large image:
                <%= text_field_tag "Large image", @link.lg_img_url %>
              </div>
              <div class="grouped-fields">
                Reviews url:
                <%= text_field_tag "Reviews", @link.reviews_url %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>


    <div class="col-md-3">
      <div class="row">
        <div class="col-md-12 generate-box">
          <strong>Generate Another Link</strong>
          <%= render 'form' %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 feature-box">
          <div class="feature-msg">
            <h4>Peregrin helps you quickly generate Amazon affiliate links.</h4>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-md-12 feature-box">
          <div class="feature-msg">
            <h4>How does it work?</h4>
            <div class="row">
              <div class="col-md-4">
                <h3><i class="glyphicon glyphicon-link"></i></h3>
                Paste an Amazon product URL
              </div>
              <div class="col-md-4">
                <h3><i class="glyphicon glyphicon-briefcase"></i></h3>
                Enter your Amazon affiliate tag
              </div>
              <div class="col-md-4">
                <h3><i class="glyphicon glyphicon-flash"></i></h3>
                Click "Generate"
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
